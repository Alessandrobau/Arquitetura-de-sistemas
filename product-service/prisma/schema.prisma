// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model products {
  id         String    @id @default(uuid())
  name       String
  price      Decimal   @db.Decimal(10, 2)
  stock      Int       @default(0)
  is_deleted Boolean   @default(false)
}