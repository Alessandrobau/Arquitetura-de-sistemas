// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// A tabela que o Prisma ir√° criar
model clients {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  password   String
  is_deleted Boolean  @default(false)
}